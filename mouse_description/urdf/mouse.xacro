<?xml version="1.0" ?>
<robot name="mouse" xmlns:xacro="http://www.ros.org/wiki/xacro">
	<xacro:property name="wheel_sep" value="0.069"/>
	<xacro:property name="wheel_dia" value="0.034"/>
	<xacro:property name="wheel_torque" value="0.015"/>
	<xacro:property name="wheel_veloc" value="105"/>

	<link name="base_link">
		<visual>
			<origin xyz="0 0 0" rpy="0 0 0"/>
			<geometry>
				<mesh filename="package://mouse_description/meshes/mouse_base.dae" scale="1 1 1"/>
			</geometry>
		</visual>

		<collision>
			<origin xyz="0 0 0" rpy="0 0 0"/>
			<geometry>
				<mesh filename="package://mouse_description/meshes/mouse_base.dae" scale="1 1 1"/>
			</geometry>
		</collision>

		<inertial>
			<origin xyz="0 -0.004502 0.011265" rpy="0 0 0"/>
			<mass value="0.077"/>
			<inertia
        		ixx="1.956e-5" ixy="3.869e-18" ixz="0.0"
        		iyy="1.775e-5" iyz="2.795e-7"
        		izz="3.367e-5"/>
		</inertial>

		<gazebo reference="base_link">
			<mu1>0.1</mu1>
			<mu2>0.1</mu2>
			<kp>1000000.0</kp>
			<kd>100.0</kd>
			<minDepth>0.001</minDepth>
			<maxVel>1.0</maxVel>
		</gazebo>
	</link>

	<!-- Actuation -->
	<link name="left_wheel">
		<visual>
			<origin xyz="0 0 0" rpy="0 0 0"/>
			<geometry>
				<mesh filename="package://mouse_description/meshes/mouse_wheel.dae" scale="1 1 1"/>
			</geometry>
		</visual>

		<collision>
			<origin xyz="0 0 0" rpy="0 0 0"/>
			<geometry>
				<mesh filename="package://mouse_description/meshes/mouse_wheel.dae" scale="1 1 1"/>
			</geometry>
		</collision>

		<inertial>
			<origin xyz="0 0 0" rpy="0 0 0"/>
			<mass value="0.015"/>
			<inertia
        		ixx="2.196e-6" ixy="0.0" ixz="0.0"
        		iyy="1.146e-6" iyz="0.0"
        		izz="1.146e-6"/>
		</inertial>

		<gazebo reference="left_wheel">
			<mu1>1.0</mu1>
			<mu2>1.0</mu2>
			<kp>1000000.0</kp>
			<kd>100.0</kd>
			<minDepth>0.001</minDepth>
			<maxVel>1.0</maxVel>
		</gazebo>
	</link>

	<link name="right_wheel">
		<visual>
			<origin xyz="0 0 0" rpy="0 0 0"/>
			<geometry>
				<mesh filename="package://mouse_description/meshes/mouse_wheel.dae" scale="1 1 1"/>
			</geometry>
		</visual>

		<collision>
			<origin xyz="0 0 0" rpy="0 0 0"/>
			<geometry>
				<mesh filename="package://mouse_description/meshes/mouse_wheel.dae" scale="1 1 1"/>
			</geometry>
		</collision>

		<inertial>
			<origin xyz="0 0 0" rpy="0 0 0"/>
			<mass value="0.015"/>
			<inertia
        		ixx="2.196e-6" ixy="0.0" ixz="0.0"
        		iyy="1.146e-6" iyz="0.0"
        		izz="1.146e-6"/>
		</inertial>

		<gazebo reference="right_wheel">
			<mu1>1.0</mu1>
			<mu2>1.0</mu2>
			<kp>1000000.0</kp>
			<kd>100.0</kd>
			<minDepth>0.001</minDepth>
			<maxVel>1.0</maxVel>
		</gazebo>
	</link>

	<joint name="left_mot" type="continuous">
		<parent link="base_link"/>
		<child link="left_wheel"/>
		<origin xyz="${wheel_sep/2} 0 ${wheel_dia/2}" rpy="0 0 0"/>
		<axis xyz="-1 0 0"/>
		<dynamics friction="0.001"/>
		<limit effort="${wheel_torque}" velocity="${wheel_veloc}"/>
	</joint>

	<joint name="right_mot" type="continuous">
		<parent link="base_link"/>
		<child link="right_wheel"/>
		<origin xyz="${-wheel_sep/2} 0 ${wheel_dia/2}" rpy="0 0 0"/>
		<axis xyz="-1 0 0"/>
		<dynamics friction="0.001"/>
		<limit effort="${wheel_torque}" velocity="${wheel_veloc}"/>
	</joint>

	<!-- Gazebo Actuation -->
	<gazebo>
		<plugin name="differential_drive_controller" filename="libgazebo_ros_diff_drive.so">
			<rosDebugLevel>0</rosDebugLevel>
			<alwaysOn>true</alwaysOn>
			<updateRate>120</updateRate>
			
			<leftJoint>right_mot</leftJoint>
			<rightJoint>left_mot</rightJoint>
			
			<wheelAcceleration>0</wheelAcceleration>
			<wheelSeparation>${wheel_sep}</wheelSeparation>
			<wheelDiameter>${wheel_dia}</wheelDiameter>
			<wheelTorque>${wheel_torque}</wheelTorque>
			
			<commandTopic>cmd_vel</commandTopic>
			<odometryTopic>odom</odometryTopic>

			<!-- world == perfect positioning -->
			<odometrySource>world</odometrySource>

			<odometryFrame>map</odometryFrame>
			<robotBaseFrame>base</robotBaseFrame>

			<publishTf>1</publishTf>
			<publishWheelTF>false</publishWheelTF>
			<publishOdomTF>true</publishOdomTF>
			<publishWheelJointState>false</publishWheelJointState>
		</plugin>
	</gazebo>

	<!-- Sensors -->

	<!-- IR sensors -->
	<link name="left_ir">
		<visual>
			<geometry>
				<box size="0.001 0.001 0.001"/>
			</geometry>
		</visual>

		<collision>
			<geometry>
				<box size="0.001 0.001 0.001"/>
			</geometry>
		</collision>

		<inertial>
			<mass value="1e-6"/>
			<inertia
        		ixx="1e-7" ixy="0.0" ixz="0.0"
        		iyy="1e-7" iyz="0.0"
        		izz="1e-7"/>
		</inertial>
	</link>

	<link name="right_ir">
		<visual>
			<geometry>
				<box size="0.001 0.001 0.001"/>
			</geometry>
		</visual>

		<collision>
			<geometry>
				<box size="0.001 0.001 0.001"/>
			</geometry>
		</collision>

		<inertial>
			<mass value="1e-6"/>
			<inertia
        		ixx="1e-7" ixy="0.0" ixz="0.0"
        		iyy="1e-7" iyz="0.0"
        		izz="1e-7"/>
		</inertial>
	</link>

	<link name="left_front_ir">
		<visual>
			<geometry>
				<box size="0.001 0.001 0.001"/>
			</geometry>
		</visual>

		<collision>
			<geometry>
				<box size="0.001 0.001 0.001"/>
			</geometry>
		</collision>

		<inertial>
			<mass value="1e-6"/>
			<inertia
        		ixx="1e-7" ixy="0.0" ixz="0.0"
        		iyy="1e-7" iyz="0.0"
        		izz="1e-7"/>
		</inertial>
	</link>

	<link name="right_front_ir">
		<visual>
			<geometry>
				<box size="0.001 0.001 0.001"/>
			</geometry>
		</visual>

		<collision>
			<geometry>
				<box size="0.001 0.001 0.001"/>
			</geometry>
		</collision>

		<inertial>
			<mass value="1e-6"/>
			<inertia
        		ixx="1e-7" ixy="0.0" ixz="0.0"
        		iyy="1e-7" iyz="0.0"
        		izz="1e-7"/>
		</inertial>
	</link>

	<joint name="left_ir_mnt" type="fixed">
		<origin xyz="-0.0256 0.0207 0.013" rpy="0 0 1.5708"/>
		<parent link="base_link"/>
		<child link="left_ir"/>
	</joint>

	<joint name="right_ir_mnt" type="fixed">
		<origin xyz="0.0256 0.0207 0.013" rpy="0 0 1.5708"/>
		<parent link="base_link"/>
		<child link="right_ir"/>
	</joint>

	<joint name="left_front_ir_mnt" type="fixed">
		<origin xyz="-0.009152 0.032074 0.013" rpy="0 0 2.4347"/>
		<parent link="base_link"/>
		<child link="left_front_ir"/>
	</joint>

	<joint name="right_front_ir_mnt" type="fixed">
		<origin xyz="0.009152 0.032074 0.013" rpy="0 0 0.70686"/>
		<parent link="base_link"/>
		<child link="right_front_ir"/>
	</joint>

	<gazebo reference="left_ir">
		<sensor type="ray" name="left_ir_sens">
			<pose>0 0 0 0 0 0</pose>
			<visualize>true</visualize>
			<update_rate>30</update_rate>
			<ray>
				<scan>
					<horizontal>
						<samples>3</samples>
						<resolution>1</resolution> 
						<min_angle>-0.01</min_angle>
						<max_angle>0.01</max_angle>
					</horizontal>
				</scan>
				<range>
					<min>0.01</min>
					<max>0.5</max>
					<resolution>0.001</resolution>
				</range>
			</ray>
			<plugin filename="libgazebo_ros_laser.so" name="gazebo_ros_gpu_laser">
				<topicName>left_ir</topicName>
				<frameName>left_ir</frameName>
			</plugin>
		</sensor>  
	</gazebo>

	<gazebo reference="right_ir">
		<sensor type="ray" name="right_ir_sens">
			<pose>0 0 0 0 0 0</pose>
			<visualize>true</visualize>
			<update_rate>30</update_rate>
			<ray>
				<scan>
					<horizontal>
						<samples>3</samples>
						<min_angle>-0.01</min_angle>
						<max_angle>0.01</max_angle>
					</horizontal>
				</scan>
				<range>
					<min>0.01</min>
					<max>0.5</max>
					<resolution>0.001</resolution>
				</range>
			</ray>
			<plugin filename="libgazebo_ros_laser.so" name="gazebo_ros_gpu_laser">
				<topicName>right_ir</topicName>
				<frameName>right_ir</frameName>
			</plugin>
		</sensor>  
	</gazebo>

	<gazebo reference="left_front_ir">
		<sensor type="ray" name="left_front_ir_sens">
			<pose>0 0 0 0 0 0</pose>
			<visualize>true</visualize>
			<update_rate>30</update_rate>
			<ray>
				<scan>
					<horizontal>
						<samples>3</samples>
						<min_angle>-0.01</min_angle>
						<max_angle>0.01</max_angle>
					</horizontal>
				</scan>
				<range>
