					<max>0.5</max>
					<resolution>0.001</resolution>
				</range>
			</ray>
			<plugin filename="libgazebo_ros_laser.so" name="gazebo_ros_gpu_laser">
				<topicName>left_front_ir</topicName>
				<frameName>left_front_ir</frameName>
			</plugin>
		</sensor>  
	</gazebo>

	<gazebo reference="right_front_ir">
		<sensor type="ray" name="right_front_ir_sens">
			<pose>0 0 0 0 0 0</pose>
			<visualize>true</visualize>
			<update_rate>30</update_rate>
			<ray>
				<scan>
					<horizontal>
						<samples>3</samples>
						<min_angle>-0.01</min_angle>
						<max_angle>0.01</max_angle>
					</horizontal>
				</scan>
				<range>
					<min>0.01</min>
					<max>0.5</max>
					<resolution>0.001</resolution>
				</range>
			</ray>
			<plugin filename="libgazebo_ros_laser.so" name="gazebo_ros_gpu_laser">
				<topicName>right_front_ir</topicName>
				<frameName>right_front_ir</frameName>
			</plugin>
		</sensor>  
	</gazebo>

